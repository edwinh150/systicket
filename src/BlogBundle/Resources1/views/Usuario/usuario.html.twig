{% block body %}
    <div class="table-responsive">
	  <table class="table table-striped" id="tbl">
	    <thead>
	      <tr>
	      	<th>Id</th>
	        <th>Nombres</th>
	        <th>Apellidos</th>
	        <th>Usuario</th>
	        <th>Estado</th>
	        <th>Fecha</th>
	        <th>Editar</th>
	      </tr>
	    </thead>
	    <tbody>

	    </tbody>
	  </table>
