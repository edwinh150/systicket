	<script type="text/javascript">
		var tableData;
 
		$.getJSON('http://127.0.0.1:8000/app_dev.php/usuario/lista', function(data) {	 
			for (i = 0; i < data.length	; i++){
				$("#tbl").append(
				'<tr>' +
				'<td>' + data[i].idUsuario + '</td>' +
				'<td>' + data[i].nombres + '</td>' + 
				'<td>' + data[i].apellidos + '</td>' +
				'<td>' + data[i].username + '</td>' +
				'<td>' + data[i].estado + '</td>' +
				'<td>' + data[i].fechaRegistro.date + '</td>' +
				'<td>' + "<a href='http://127.0.0.1:8000/app_dev.php/usuario/get/" + data[i].idUsuario + "' class='btn btn-primary' >Editar</a>" + '</td>' +
				'</tr>'
				);
			}
		}); 
